[flake8]
max-line-length = 120
# Ignore:
# E402 - Module level import not at top of file (needed for path setup)
# E266 - Too many leading '#' for block comment (markdown-style headers)
# F541 - f-string is missing placeholders (sometimes used for consistency)
extend-ignore = E402, E266, F541
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    .eggs,
    *.egg-info
